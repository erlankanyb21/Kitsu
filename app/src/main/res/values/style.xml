<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BaseMainTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="BaseCircleCardView">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="BaseSearchView" parent="Widget.AppCompat.EditText">
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:hint">Поиск</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:background">@drawable/bg_search_et</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="BaseTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="endIconMode">clear_text</item>
        <item name="boxStrokeColor">@color/orange</item>
        <item name="android:textColorHint">@color/orange</item>
        <item name="boxCornerRadiusTopStart">@dimen/element_margin</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/element_margin</item>
        <item name="boxCornerRadiusBottomStart">@dimen/element_margin</item>
        <item name="boxCornerRadiusTopEnd">@dimen/element_margin</item>
        <item name="endIconTint">@color/orange</item>
        <item name="hintTextColor">@color/orange</item>
    </style>

    <style name="BaseImageView">
        <item name="android:src">@drawable/ic_launcher_foreground</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="BaseClickableText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/regular_txt_16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">2dp</item>
    </style>

</resources>